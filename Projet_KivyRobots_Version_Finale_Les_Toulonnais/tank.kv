#:kivy 1.9.0
#Cette page définit l'interface de combat.
#Elle est chargée dans un PopUp lors du combat.

#On definit dabord les tank/explosions en tant que mini canvas image.

<Tank>:
    canvas:
        Rectangle:
            source: self.source
            pos: self.pos
            size: self.size


<Explosion>
    canvas:
        Rectangle:
            source: self.source
            pos: self.pos
            size: self.size

#definition de l'affichage principal. La fonction dans le python les déplace.
<TankGame>:
    player1: player_left
    player2: player_right
    exp: explo

    #image de fond d'écran.
    canvas:
        Rectangle:
            source: 'img/game.png'
            size:root.width,root.height
            pos:5,45

    #On définit ici la position de base des objets sur le canvas principal pour l'animaton.
    Tank:
        source: 'img/tanku.png'
        id: player_left
        size: root.width/32,root.height/32

        x: root.x-self.width/2
        y: root.top+self.height-5

    Tank:
        source: 'img/tanku2.png'
        id: player_right
        size: root.width/32,root.height/32
        x: root.width-self.width
        #y: root.y
        y: root.y+2*self.height-5

    Explosion:
        id:explo
        size: root.width/32,root.height/32
        source: self.source
