    #fond écran pour bouton choissit, doit être fait via une fonction callback

<DescriptorLabel@Label>:
    color: [0,0,0,1]

#layout de la boutique.
<Boutique>:
    GridLayout:
        size: root.size
        cols: 2
        #rows: 2
        spacing: 10

        BoxLayout:
            orientation: "vertical"

            StackLayout:
                size_hint: 1, .1
                orientation: "lr-tb"

                SelectEquipementButton:
                    id: CanonButton
                    text: "Canons"
                    size_hint: .24, 1
                    background_normal: 'img/selctEq.png'
                    on_release: root.ButtonPress('CanonButton')

                SelectEquipementButton:
                    id: BlindageButton
                    text: "Blindages"
                    size_hint: .24, 1
                    on_release: root.ButtonPress('BlindageButton')

                SelectEquipementButton:
                    id: ChenilleButton
                    text: "Chenilles"
                    size_hint: .24, 1
                    on_release: root.ButtonPress('ChenilleButton')

                SelectEquipementButton:
                    id: SystemesButton
                    text: "Systèmes"
                    size_hint: .24, 1
                    on_release: root.ButtonPress('SystemesButton')

            SelectChangingEquipementLayout:
                id: ChangingEquipementLayout
                pos: 0,0

        AnchorLayout:
            AnchorLayout:
                anchor_x: "right"
                anchor_y: "center"
                size_hint: .24, .8

                BoxLayout:
                    #size_hint: 1, .2
                    orientation: "vertical"

                    Image:
                        source: app.imgEq
                        size_hint: None, None
                        size: 170, 112

                    DescriptorLabel:
                        text: app.nomEq
                        size_hint: .24, .33

                    DescriptorLabel:
                        text: "Statistiques"
                        size_hint: .2, .33
                        bold: True

                    StackLayout:
                        orientation: "lr-tb"
                        size_hint: 2, .1


                        DescriptorLabel:
                            size_hint: .24, .33
                            text: app.valEq

                    StackLayout:
                        orientation: "lr-tb"
                        size_hint: 2, .1

                        DescriptorLabel:
                            size_hint: .04, .33
                            text: app.prixEq


                    Button:
                        text: "Acheter"
                        size_hint: 1, .14
                        pos: -10, -10
                        on_release: root.Acheter()
