


<SelectChangingEquipementLayout@FloatLayout>:
    FloatLayout:
        id: zoneAll
        size: root.size
        SelectSystemLayout:
            id: ProcessLayout
            pos: root.x, root.y
        SelectTrackLayout:
            id: RouageLayout
            pos: root.x, root.y
        SelectArmorLayout:
            id: BlindageLayout
            pos: root.x, root.y
        SelectCanonLayout:
